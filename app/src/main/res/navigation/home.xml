<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    app:startDestination="@id/controllerFragment">

    <fragment
        android:id="@+id/controllerFragment"
        android:name="com.onix.internship.ui.controller.ControllerFragment"
        android:label="ControllerFragment">

        <action
            android:id="@+id/action_controllerFragment_to_devicesFragment"
            app:destination="@id/devicesFragment" />

        <action
            android:id="@+id/action_controllerFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/devicesFragment"
        android:name="com.onix.internship.ui.devices.DevicesFragment"
        android:label="DevicesFragment" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.onix.internship.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>